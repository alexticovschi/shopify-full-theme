<section class="jumbo">
  {% if section.settings.bg_type == 'video' %}
    {% if section.settings.video_type == 'vimeo' %}
      <iframe allow="autoplay" class="jumbo__bg-video" frameborder="0" src="//player.vimeo.com/video/{{ section.settings.video_id }}?title=0&amp;portrait=0&amp;byline=0&amp;autoplay=1&loop=1&controls=0&autopause=0&mute=1"></iframe>
    {% else %}
      <iframe allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="jumbo__bg-video" frameborder="0" height="315" src="https://www.youtube.com/embed/{{ section.settings.video_id }}?autoplay=1&loop=1&mute=1&controls=0" width="560"></iframe>
    {% endif %}
  {% else %}
    <div class="jumbo__bg-image" style="background: url('{{ section.settings.bg_image | img_url: '1200x' }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"></div>
  {% endif %}
  <div class="jumbo__transparent-color"></div>
  <div class="jumbo__titles">
    <h1 class="jumbo__title">{{ section.settings.jumbo_title }}</h1>
    <h2 class="jumbo__subtitle">{{  section.settings.jumbo_subtitle }}</h2>
  </div>
  <div class="jumbo__state">
    <span class="jumbo__state__number">01</span>
  </div>
  <div class="jumbo__store-info">
    {% for block in section.blocks %}
      {% if block.settings.bottom_image != blank %}
        <a class="jumbo__store-info__link" href="{{ block.settings.bottom_image_url }}">
          <img class="jumbo__store-info__img" alt="bottom image" src="{{ block.settings.bottom_image | img_url: '300x' }}"/>
        </a>
      {% else %}
        <a class="jumbo__store-info__link" href="#">
          <img class="jumbo__store-info__img" alt="default image" src="{{ 'summer-girl.jpg' | asset_url }}"/>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

